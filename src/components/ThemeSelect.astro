---
// Override Starlight's ThemeSelect component to add version dropdown
// Based on approach from starlight-versions: https://github.com/HiDeoo/starlight-versions
import { Icon } from '@astrojs/starlight/components'
import Default from '@astrojs/starlight/components/ThemeSelect.astro'

import { documentationVersions } from '../constants'

// Detect current version based on URL hostname
const getCurrentVersion = (versions, hostname) => {
  for (const version of versions) {
    try {
      const versionUrl = new URL(version.href)
      const versionHostname = versionUrl.hostname
      
      // Exact match
      if (hostname === versionHostname) {
        return version
      }
      
      // Check if hostname contains the subdomain (e.g., release-1-15-0.kyverno.io)
      const versionSubdomain = versionHostname.split('.')[0]
      if (hostname.includes(versionSubdomain) && versionSubdomain !== 'kyverno') {
        return version
      }
    } catch (e) {
      continue
    }
  }
  
  // Default to "main" version if no match found
  return versions.find(v => v.href.includes('main.kyverno.io')) || versions[0]
}

const currentHostname = Astro.url.hostname
const currentVersion = getCurrentVersion(documentationVersions, currentHostname)

// Preserve current path when switching versions
const currentPath = Astro.url.pathname
const versionOptions = documentationVersions.map((version) => {
  const versionUrl = new URL(version.href)
  const targetUrl = new URL(currentPath, versionUrl.origin)
  return {
    label: version.label,
    href: targetUrl.toString(),
    isCurrent: version.href === currentVersion.href,
  }
})
---


<starlight-version-select>
  <label class="version-label">
    <span class="sr-only">Select version</span>
    <Icon name="seti:clock" class="icon label-icon" />
    <select class="version-select" autocomplete="off">
      {versionOptions.map((version) => (
        <option value={version.href} selected={version.isCurrent}>{version.label}</option>
      ))}
    </select>
    <Icon name="down-caret" class="icon caret-icon" />
  </label>
</starlight-version-select>
<Default><slot /></Default>

<style>
  starlight-version-select {
    display: inline-block;
  }

  .version-label {
    --sl-versions-label-icon-size: 0.875rem;
    --sl-versions-caret-icon-size: 1.25rem;

    align-items: center;
    color: var(--sl-color-gray-1);
    display: flex;
    gap: 0.25rem;
    position: relative;
  }

  .version-label:hover {
    color: var(--sl-color-gray-2);
  }

  .icon {
    pointer-events: none;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
  }

  .label-icon {
    font-size: var(--sl-versions-label-icon-size);
    inset-inline-start: 0;
  }

  .caret-icon {
    font-size: var(--sl-versions-caret-icon-size);
    inset-inline-end: 0;
  }

  .version-select {
    appearance: none;
    background-color: transparent;
    border: 0;
    color: inherit;
    cursor: pointer;
    padding-block: 0.625rem;
    padding-inline: calc(var(--sl-versions-label-icon-size) + 0.375rem)
      calc(var(--sl-versions-caret-icon-size) + 0.25rem);
    text-overflow: ellipsis;
    width: 6.5em;
  }

  option {
    background-color: var(--sl-color-bg-nav);
    color: var(--sl-color-gray-1);
  }

  @media (min-width: 50rem) {
    .version-select {
      font-size: var(--sl-text-sm);
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>

<script>
  customElements.define(
    'starlight-version-select',
    class StarlightVersionSelect extends HTMLElement {
      constructor() {
        super()

        const select = this.querySelector('select')
        if (!select) return

        select?.addEventListener('change', (event) => {
          if (event.currentTarget instanceof HTMLSelectElement) {
            // The option value already contains the full URL with path preserved
            window.location.href = event.currentTarget.value
          }
        })
      }
    },
  )
</script>